{
  "name": "lashun-tweak-pro-pro-edition",
  "version": "1.0.0",
  "description": "Windows PC Tweaker App",
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development electron .",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "build:exe": "npm install && npm run build:frontend && electron-builder",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.lashun.tweakpro",
    "productName": "Lashun Tweak Pro PRO EDITION",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache"
    ],
    "extraResources": [
      { "from": "../backend", "to": "backend" },
      { "from": "../scripts", "to": "scripts" },
      { "from": "../frontend/build", "to": "frontend/build" }
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "dependencies": {
    "electron-store": "^8.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^29.4.0",
    "electron-builder": "^24.6.4"
  }
}
